---
import type { Playlist } from "@/lib/data";


interface Props {
    playlist: Playlist
}

const { playlist } = Astro.props

const { id, albumId, title, color, cover, artists } = playlist

const artistsString = artists.join(', ')

---

<li class="text-[#f3f3f3]">
    <a 
        href={`playlist/${id}`}
        class="playlist-item flex relative overflow-hidden items-center gap-4 hover:bg-gray1 transition-colors hover:transition-colors p-2 rounded-md"
    >
    <picture class="h-[50px] w-[50px] flex-none">
        <img
            class="rounded-[4px]"
            src={cover} 
            alt={`Cover of ${title}`}/>
    </picture>
    <div class="flex flex-col truncate justify-center elementText">
        <h4 class="font-semibold text-[15px]">
            {title}
        </h4>
        <span class="text-xs font-normal text-txtgray">
            {artistsString}
        </span>
    </div>
    </a>
</li>