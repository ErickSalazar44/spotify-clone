---
// data
import type { Playlist } from "@/lib/data";
import CardPlayButton from "@/components/menu/CardPlayButton";

interface Props {
    playlist: Playlist;
}

const { playlist } = Astro.props;

const { id, title, cover, artists } = playlist;

const artistsString = artists.join(", ");
---

<article
    class='group rounded-md relative bg-card hover:bg-cardHover hover:transition-colors shadow hover:shadow-sm transition-all duration-300'
>
    <div
        class=`absolute right-4 bottom-[105px] translate-y-4 transition duration-300 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 z-10 `
        transition:animate="none"
    >
        <CardPlayButton id={id} client:visible />
    </div>
    <a
        href={`playlist/${id}`}
        class='playlist-item flex relative overflow-hidden gap-4 p-3 w-[168px] flex-col'
        transition:name={`playlist ${id} box`}
    >
        <picture class='aspect-square object-cover w-full flex-none'>
            <img
                class='rounded-sm object-cover aspect-square'
                src={cover}
                alt={`Cover of ${title}`}
                transition:name={`playlist ${id} image`}
            />
        </picture>
        <div class='flex flex-col min-h-[62px]'>
            <h3
                class='font-bold text-[15px] truncate pb-1'
                transition:name=`playlist ${id} title`
            >
                {title}
            </h3>
            <span
                class='text-sm font-normal text-txtgray'
                transition:name=`playlist ${id} subtitle`
            >
                {artistsString}
            </span>
        </div>
    </a>
</article>
